<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="icon" href="/images/Picture1.png">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nirmaan-Club||OurTeam</title>
    <link rel="preconnect" href="https://fonts.googleapis.com"><link rel="preconnect" href="https://fonts.gstatic.com" crossorigin><link href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:ital,wght@1,600&display=swap" rel="stylesheet">
    <!-- linking main styling file -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="fonts/icomoon/style.css">
    <link rel="stylesheet" href="/css/bootstrap/bootstrap.css">
    <link rel="stylesheet" href="/css/ourteam.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<style>
    body,*{
        font-family: 'Source Serif Pro', serif;
    }
</style>

<body>
    <!-- navbar section -->
    <div class="navbarposition">
        <%- include("partials/navbar.ejs") %>
    </div>

    <!-- overlay section -->
    <div class="entry">
        <div class="titled">
            NIRMAAN TEAM
        </div>
    </div>

    <br><br><br>

    <!-- main container  -->
    <div class="sitewarp" style="padding-bottom:40px">
        <div class="cont">

            <!-- setting teamwise section -->
            <% for(let team in teams){%>
                <div class="title">
                    <h1>
                        <br>
                        <%=team%>
                    </h1>
                </div>
                <div class="hr"></div>
                <br>
                <div class="conti">
                    <!-- adding member card -->
                    <% for(let i=0;i<teams[team].length;i++){%>
                        <div class="profilecard">
                            <div class="hover">

                            </div>
                            <div class="circle">
                                <img src="<%=teams[team][i].image_link%>" alt="">
                            </div>
                            <div class="info">
                                <span class="name">
                                    <%=teams[team][i].name%>
                                </span>
                                <span class="pos">
                                    <%=teams[team][i].title%>
                                </span>
                            </div>
                            <div class="links">
                                <ul class="nav justify-content-center" style="font-size:25px;">

                                    <% if(teams[team][i].instalink!="" ){%>
                                        <li class="nav-item"><a style="color:black ;" target="_blank"
                                                href="<%=teams[team][i].instalink%>" class="nav-link"><i
                                                    class="fa fa-instagram"></i></a>
                                        </li>
                                        <%}%>
                                            <% if(teams[team][i].facebooklink!="" ){%>
                                                <li class="nav-item"><a style="color:black ;" target="_blank"
                                                        href="<%=teams[team][i].facebooklink%>" class="nav-link"><i
                                                            class="fa fa-facebook-f"></i></a>
                                                </li>
                                                <%}%>
                                                    <% if(teams[team][i].linkedinlink!="" ){%>
                                                        <li class="nav-item"><a style="color:black ;" target="_blank"
                                                                href="<%=teams[team][i].linkedinlink%>"
                                                                class="nav-link"><i class="fa fa-linkedin"></i></a>
                                                        </li>
                                                        <%}%>
                                                            <% if(teams[team][i].twitter!="" ){%>
                                                                <li class="nav-item"><a style="color:black ;"
                                                                        target="_blank"
                                                                        href="<%=teams[team][i].twitter%>"
                                                                        class="nav-link"><i
                                                                            class="fa fa-twitter"></i></a>
                                                                </li>
                                                                <%}%>
                                </ul>
                            </div>
                        </div>

                        <%}%>
                </div>
                <br>
                <%}%>




        </div>
    </div>

    <!-- footer section -->
    <div class="footerposition">
        <%- include("partials/footer.ejs") %>
    </div>
</body>

</html>